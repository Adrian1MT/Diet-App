<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detallesReceta">

    <TextView
        android:id="@+id/nomReceta"
        android:layout_width="394dp"
        android:layout_height="101dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="44dp"
        android:hint="Nombre"
        android:textSize="40sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="156dp"
        android:layout_height="28dp"
        android:layout_marginTop="24dp"
        android:text="Elaboracion:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/nomReceta"
        app:layout_constraintTop_toBottomOf="@+id/nomReceta" />

    <TextView
        android:id="@+id/elaboracion"
        android:layout_width="402dp"
        android:layout_height="413dp"
        android:layout_marginTop="20dp"
        android:scrollbars="vertical"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/tipo"
        android:layout_width="146dp"
        android:layout_height="33dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="72dp"
        android:text="Tipo"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/nomReceta"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tiempo"
        android:layout_width="208dp"
        android:layout_height="31dp"
        android:layout_marginStart="30dp"
        android:text="tiempo"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/tipo"
        app:layout_constraintTop_toTopOf="@+id/tipo" />

    <TextView
        android:id="@+id/dificultad"
        android:layout_width="156dp"
        android:layout_height="31dp"
        android:layout_marginStart="30dp"
        android:text="dificultad"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/tiempo"
        app:layout_constraintTop_toTopOf="@+id/tiempo" />

    <TextView
        android:id="@+id/comensales"
        android:layout_width="220dp"
        android:layout_height="37dp"
        android:layout_marginStart="30dp"
        android:text="comensales"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/dificultad"
        app:layout_constraintTop_toTopOf="@+id/dificultad" />

    <ImageView
        android:id="@+id/foto"
        android:layout_width="349dp"
        android:layout_height="203dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView"
        app:srcCompat="@drawable/ic_launcher_background" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="524dp"
        android:layout_height="176dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/elaboracion"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="164dp"
        android:layout_height="32dp"
        android:layout_marginStart="404dp"
        android:text="Ingredientes:"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView6" />
</androidx.constraintlayout.widget.ConstraintLayout>