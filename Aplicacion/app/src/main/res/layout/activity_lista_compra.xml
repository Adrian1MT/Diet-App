<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".listaCompra">

    <TextView
        android:id="@+id/txtListaRecetas"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/toms_handwritten_new"
        android:shadowColor="#8BC34A"
        android:text="Necesitamos:"
        android:textColor="@color/verde_oscuro"
        android:textSize="50dp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtListaAlmacen"
        android:layout_width="172dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/toms_handwritten_new"
        android:shadowColor="#8BC34A"
        android:text="Tenemos:"
        android:textColor="@color/verde_oscuro"
        android:textSize="50dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toStartOf="@+id/txtListaCompra"
        app:layout_constraintStart_toEndOf="@+id/txtListaRecetas"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtListaCompra"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="100dp"
        android:fontFamily="@font/toms_handwritten_new"
        android:shadowColor="#8BC34A"
        android:text="Compramos:"
        android:textColor="@color/verde_oscuro"
        android:textSize="50dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reciclerListaRecetas"
        android:layout_width="300dp"
        android:layout_height="420dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="@+id/txtListaRecetas"
        app:layout_constraintTop_toBottomOf="@+id/txtListaRecetas">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/txtOrigen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/reciclerListaRecetas"
        app:layout_constraintTop_toBottomOf="@+id/reciclerListaRecetas" />

    <TextView
        android:id="@+id/txtFin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:textAlignment="textEnd"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/reciclerListaRecetas"
        app:layout_constraintTop_toBottomOf="@+id/reciclerListaRecetas" />

    <TextView
        android:id="@+id/txtMenos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textColor="@color/verde_oscuro"
        android:textSize="100sp"
        app:layout_constraintBottom_toBottomOf="@+id/reciclerListaRecetas"
        app:layout_constraintEnd_toStartOf="@+id/reciclerListaAlmacen"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/reciclerListaRecetas"
        app:layout_constraintTop_toTopOf="@+id/reciclerListaRecetas"
        app:layout_constraintVertical_bias="0.3" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reciclerListaAlmacen"
        android:layout_width="300dp"
        android:layout_height="420dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/reciclerListaCompra"
        app:layout_constraintStart_toEndOf="@+id/reciclerListaRecetas"
        app:layout_constraintTop_toBottomOf="@+id/txtListaAlmacen" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reciclerListaCompra"
        android:layout_width="300dp"
        android:layout_height="420dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:clipToPadding="false"
        android:fadingEdge="none"
        app:layout_constraintEnd_toEndOf="@+id/txtListaCompra"
        app:layout_constraintTop_toBottomOf="@+id/txtListaCompra" />

    <TextView
        android:id="@+id/txtIgual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textColor="@color/verde_oscuro"
        android:textSize="100sp"
        app:layout_constraintBottom_toBottomOf="@+id/reciclerListaAlmacen"
        app:layout_constraintEnd_toStartOf="@+id/reciclerListaCompra"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/reciclerListaAlmacen"
        app:layout_constraintTop_toTopOf="@+id/reciclerListaAlmacen"
        app:layout_constraintVertical_bias="0.3" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="realizarCompra"
        android:text="Realizar compra"
        app:layout_constraintEnd_toEndOf="@+id/reciclerListaCompra"
        app:layout_constraintTop_toBottomOf="@+id/reciclerListaCompra" />

</androidx.constraintlayout.widget.ConstraintLayout>